<Window x:Name="NewEntry" x:Class="CaptainsLog.NewEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaptainsLog"
        mc:Ignorable="d"
        Title="New Log Entry" Height="300" Width="300">
    <Grid>
        <TextBlock x:Name="textBlockTitle" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Title: " VerticalAlignment="Top" Width="28"/>
        <TextBlock x:Name="textBlockText" HorizontalAlignment="Left" Margin="10,31,0,0" TextWrapping="Wrap" Text="Text:" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxTitle" Height="16" Margin="38,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxText" Margin="39,33,10,30" TextWrapping="Wrap"/>
        <Button x:Name="buttonFinish" Content="Finish" Margin="0,0,10,5" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="50" Click="button_Click"/>
        <Button x:Name="button" Content="Cancel" Margin="0,0,65,5" Click="button_Click_1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="50"/>

    </Grid>
</Window>
