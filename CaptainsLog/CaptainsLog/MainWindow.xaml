<Window x:Name="CaptainsLogMainWindow" x:Class="CaptainsLog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaptainsLog"
        mc:Ignorable="d"
        Title="Captain's Log" Height="350" Width="525">
    <Grid>
        <Menu x:Name="menu" Margin="0,0,0,0">
            <MenuItem Header="File">
                <MenuItem Header="New" Click="MenuItem_Click_3"/>
                <MenuItem Header="Open" Click="MenuItem_Click_4"/>
                <MenuItem Header="Save"/>
                <MenuItem Header="Save As"/>
                <Separator />
                <MenuItem Header="Close" Click="MenuItem_Click_2"/>
            </MenuItem>
            <MenuItem Header="Entries">
                <MenuItem Header="New Entry" HorizontalAlignment="Left" Width="140" Click="MenuItem_Click"/>
                <MenuItem Header="Delete Entry" Click="MenuItem_Click_1" />
            </MenuItem>
        </Menu>
        <DataGrid x:Name="dataGrid" Margin="0,20,0,0" IsReadOnly="True" IsManipulationEnabled="True" MaxColumnWidth="175" AlternatingRowBackground="Gainsboro"  AlternationCount="2"/>
    </Grid>
</Window>
